<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:padding="20dp"
              android:background="#FFA500"
              android:weightSum="1">

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="171dp"
        android:layout_height="35dp"
        android:background="@drawable/loginbuttonbckg"
        android:padding="3dp"
        android:text="@string/signUp"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@+id/userEmailId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/fullName"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/userfullName"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:layout_above="@+id/userEmailId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <EditText
        android:id="@+id/userEmailId"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/emailidsymbol"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/emailid"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:layout_above="@+id/mobileNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <View
        android:layout_width="330dp"
        android:layout_height="1px"
        android:background="@color/black"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <View
        android:layout_width="330dp"
        android:layout_height="1px"
        android:background="@color/black"
        android:layout_above="@+id/password"
        android:layout_alignRight="@+id/age"
        android:layout_alignEnd="@+id/age"/>


    <EditText
        android:id="@+id/mobileNumber"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/mobileNumber"
        android:inputType="phone"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>



    <View
        android:layout_width="330dp"
        android:layout_height="1px"
        android:background="@color/black"
        android:layout_alignTop="@+id/age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <View
        android:layout_width="330dp"
        android:layout_height="1px"
        android:background="@color/black"
        android:layout_alignBottom="@+id/fullName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <View
        android:layout_width="330dp"
        android:layout_height="1px"
        android:background="@color/black"
        android:layout_above="@+id/mobileNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <EditText
        android:id="@+id/age"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/age"
        android:inputType="phone"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:layout_below="@+id/mobileNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <EditText
        android:id="@+id/password"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/userpassoword"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:layout_weight="0.18"
        android:layout_below="@+id/age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/confirm_password"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="@string/confirmPassword"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>